<% i = 0 %>
  <table border="1">
  <% @events.each do |event| %>
    <tr>
      <td><%= i +=1 %></td>
      <td><%= link_to event.name, event_path(event) %> </td>
      <td><%= link_to " (XML)", event_path(event, :format => :xml) %></td>
      <td><%= link_to " (JSON)", event_path(event, :format => :json) %></td>
      <td><%= link_to 'edit', edit_event_path(event) %></td>
      <td><%= link_to 'attendees', event_attendees_path(event) %></td>
      <td><%= link_to 'location', event_location_path(event) %></td>
      <td><%= button_to 'delete', event_path(event), :method => :delete, :data => { :confirm => "Are you sure?" } %></td>
  </tr>
  <% end %>
</table>
